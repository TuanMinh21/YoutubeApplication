<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/define_dimen_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/define_dimen_10">

        <com.example.youtubechannel.ui.widget.textview.RobotoBoldTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:layout_toStartOf="@+id/tv_see_all_playlist"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <com.example.youtubechannel.ui.widget.textview.RobotoRegularTextView
            android:id="@+id/tv_see_all_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/see_all_underline"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_playlist"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
