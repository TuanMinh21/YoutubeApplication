<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/define_dimen_10"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:paddingEnd="@dimen/define_dimen_10"
        android:layout_height="wrap_content">

        <com.example.youtubechannel.ui.widget.textview.RobotoBoldTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/tvSeeAll"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"/>

        <com.example.youtubechannel.ui.widget.textview.RobotoRegularTextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:text="@string/see_all_underline"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvData"
        android:layout_marginBottom="@dimen/define_dimen_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
